---
import '../styles/global.css';
import { WavyBackground } from '../components/WavyBackground.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />

		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>www.hannahgibbin.com - Coming Soon</title>
	</head>
	<body class="min-h-screen bg-gradient-to-br from-blue-400 via-purple-500 to-pink-500 text-white font-sans">
		<WavyBackground
			client:load
			containerClassName="min-h-screen flex items-center justify-center px-4"
			colors={['#38bdf8', '#818cf8', '#c084fc', '#e879f9', '#22d3ee']}
			waveWidth={100}
			backgroundFill="transparent"
			blur={18}
			speed={1}
			waveOpacity={0.1}
		>
			<div class="text-center p-4 sm:p-6 md:p-8 max-w-4xl mx-auto w-full">
				<div class="text-4xl sm:text-5xl md:text-6xl mb-6 sm:mb-8 opacity-80">ðŸš€</div>
				<h1 class="text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-light mb-3 sm:mb-4 px-2 leading-tight">www.hannahgibbin.com</h1>
				<h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-light mb-4 sm:mb-6 text-white/90">Coming soon!</h2>
				<p class="text-base sm:text-lg md:text-xl lg:text-2xl mb-6 sm:mb-8 opacity-90 px-2 leading-relaxed">
					We're working hard to bring you something amazing.
					<br class="hidden sm:block" />
					<span class="sm:hidden"> </span>Stay tuned!
				</p>
			</div>
		</WavyBackground>
	</body>
</html>
