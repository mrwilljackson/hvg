---
import '../styles/global.css';
import { WavyBackground } from '../components/WavyBackground.tsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>www.hannahgibbin.com - Coming Soon</title>
	</head>
	<body class="min-h-screen bg-gradient-to-br from-blue-400 via-purple-500 to-pink-500 text-white font-sans">
		<WavyBackground
			client:load
			containerClassName="min-h-screen flex items-center justify-center"
			colors={['rgba(255,255,255,0.3)', 'rgba(255,255,255,0.2)', 'rgba(255,255,255,0.4)', 'rgba(255,255,255,0.1)', 'rgba(255,255,255,0.25)']}
			waveWidth={50}
			backgroundFill="transparent"
			blur={8}
			speed={1}
			waveOpacity={0.6}
		>
			<div class="text-center p-8 max-w-2xl">
				<div class="text-6xl mb-8 opacity-80">ðŸš€</div>
				<h1 class="text-5xl md:text-6xl font-light mb-4">www.hannahgibbin.com</h1>
				<h2 class="text-3xl md:text-4xl font-light mb-4 text-white/90">Coming soon!</h2>
				<p class="text-xl md:text-2xl mb-8 opacity-90">We're working hard to bring you something amazing. <br />Stay tuned!</p>
			</div>
		</WavyBackground>
	</body>
</html>
